[logic]
active = companion_manager@base
on_combat = combat
post_combat_time = 0,0
danger = danger_condition

[companion_manager@base]
combat_ignore_keep_when_attacked = true
combat_ignore = {+npcx_axr_info_companion_ignore_combat -npcx_axr_info_companion_ignore_actor_enemies} true, {+npcx_axr_info_companion_ignore_combat +npcx_axr_info_companion_ignore_actor_enemies =is_enemy_fighting_actor} false, false
meet = meet
gather_items_enabled = false
corpse_detection_enabled = false
actor_dialogs = actor_dialogs
on_combat = combat

[combat]
combat_type = {+npcx_axr_info_companion_combat_tactics_camper} camper, {+npcx_axr_info_companion_combat_tactics_smart} monolith

[meet]
reset_distance = 2
abuse = false
close_anim = {+npcx_axr_info_behavior_substate_stealth -npcx_axr_info_behavior_substate_relax} hide, guard_na
use = {=is_wounded} false, {!is_squad_commander} false

[danger_condition]
ignore_distance_grenade  = 15
ignore_distance_corpse   = 0
ignore_distance_hit      = 0
ignore_distance_sound    = 0

[actor_dialogs]
disable = dm_traveler_dialog, dm_actor_become_guide_to_companion_dialog, dm_universal_dialog, about_quests_dialog_dolg, about_quests_dialog_freedom, about_quests_dialog_bandit, about_quests_dialog_stalkers,